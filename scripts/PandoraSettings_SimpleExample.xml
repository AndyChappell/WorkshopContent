<!-- Pandora settings xml file -->

<pandora>
    <!-- GLOBAL SETTINGS -->
    <IsMonitoringEnabled>true</IsMonitoringEnabled>
    <ShouldDisplayAlgorithmInfo>true</ShouldDisplayAlgorithmInfo>
    <SingleHitTypeClusteringMode>true</SingleHitTypeClusteringMode>

    <!-- PLUGIN SETTINGS -->
    <MuonPlugin>LArParticleIdExample</MuonPlugin>
    <HadronicEnergyCorrectionPlugins>LArEnergyCorrectionExample</HadronicEnergyCorrectionPlugins>

    <LArParticleIdExample>
        <ExampleParameter>1</ExampleParameter>
    </LArParticleIdExample>

    <LArEnergyCorrectionExample>
        <EnergyMultiplier>1.1</EnergyMultiplier>
    </LArEnergyCorrectionExample>

    <!-- ALGORITHM SETTINGS -->
    <algorithm type="LArAccessListsExample"/>
    <algorithm type="LArDisplayListsExample">
        <DisplayCurrentCaloHits>true</DisplayCurrentCaloHits>
    </algorithm>

    <algorithm type="LArSelectHitSubsetExample">
        <HitSelectionFraction>0.9</HitSelectionFraction>
        <OutputListName>SelectedHits</OutputListName>
    </algorithm>
    <algorithm type="LArDisplayListsExample">
        <DisplayCurrentCaloHits>true</DisplayCurrentCaloHits>
    </algorithm>

    <algorithm type="LArCreateClustersExample">
        <MaxClusterHitDistance>20.</MaxClusterHitDistance>
        <OutputListName>ExampleClusters</OutputListName>
    </algorithm>
    <algorithm type="LArDisplayListsExample">
        <DisplayCurrentClusters>true</DisplayCurrentClusters>
    </algorithm>

    <algorithm type="LArMergeClustersExample">
        <NClusterMergesToMake>1</NClusterMergesToMake>
    </algorithm>
    <algorithm type="LArDisplayListsExample">
        <DisplayCurrentClusters>true</DisplayCurrentClusters>
    </algorithm>

    <algorithm type="LArFragmentClustersExample">
        <NClustersToFragment>1</NClustersToFragment>
        <NFragmentsPerCluster>2</NFragmentsPerCluster>
    </algorithm>
    <algorithm type="LArDisplayListsExample">
        <DisplayCurrentClusters>true</DisplayCurrentClusters>
    </algorithm>

    <algorithm type="LArReconfigureClustersExample">
        <NClustersToReconfigure>1</NClustersToReconfigure>
        <ReclusteringAlgorithms>
            <algorithm type="LArCreateClustersDaughterExample"><NClustersToMake>3</NClustersToMake></algorithm>
            <algorithm type="LArCreateClustersDaughterExample"><NClustersToMake>4</NClustersToMake></algorithm>
        </ReclusteringAlgorithms>
    </algorithm>
    <algorithm type="LArDisplayListsExample">
        <DisplayCurrentClusters>true</DisplayCurrentClusters>
    </algorithm>

    <algorithm type="LArDeleteClustersExample">
        <NClustersToDelete>1</NClustersToDelete>
    </algorithm>
    <algorithm type="LArDisplayListsExample">
        <DisplayCurrentClusters>true</DisplayCurrentClusters>
    </algorithm>

    <algorithm type="LArCreateVerticesExample">
        <OutputListName>ExampleVertices</OutputListName>
    </algorithm>
    <algorithm type="LArDisplayListsExample">
        <DisplayCurrentVertices>true</DisplayCurrentVertices>
    </algorithm>

    <algorithm type="LArCreatePfosExample">
        <OutputListName>ExamplePfos</OutputListName>
    </algorithm>
    <algorithm type="LArDisplayListsExample">
        <DisplayCurrentPfos>true</DisplayCurrentPfos>
    </algorithm>

    <algorithm type="LArCreateAdditionalCaloHitsExample">
        <NCaloHitsToMake>20</NCaloHitsToMake>
        <SetCurrentListToInputList>true</SetCurrentListToInputList>
    </algorithm>
    <algorithm type="LArDisplayListsExample">
        <DisplayCurrentCaloHits>true</DisplayCurrentCaloHits>
    </algorithm>

    <algorithm type="LArUseAlgorithmToolExample">
        <ExampleTools>
            <tool type="LArAlgorithmToolExample"/>
        </ExampleTools>
    </algorithm>

    <algorithm type="LArUsePluginsExample"/>

    <algorithm type="LArWriteTreeExample">
        <FileName>LArExampleFile.root</FileName>
        <TreeName>LArExampleTree</TreeName>
    </algorithm>

    <algorithm type="LArDisplayListsExample">
        <DisplayCurrentCaloHits>true</DisplayCurrentCaloHits>
        <DisplayCurrentTracks>false</DisplayCurrentTracks>
        <DisplayCurrentMCParticles>false</DisplayCurrentMCParticles>
        <DisplayCurrentClusters>true</DisplayCurrentClusters>
        <DisplayCurrentVertices>true</DisplayCurrentVertices>
        <DisplayCurrentPfos>true</DisplayCurrentPfos>
    </algorithm>
</pandora>
